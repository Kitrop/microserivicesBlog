generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())
  userId Int
  message String
  Likes Likes[]
  Comments Comments[]
}

model Likes {
  id Int @id @default(autoincrement())
  userId Int
  post Post @relation(fields: [postId], references: [id])
  postId Int
}

model Comments {
  id Int @id @default(autoincrement())
  userId Int
  text String
  post Post @relation(fields: [postId], references: [id])
  postId Int
}